<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:id="@+id/text_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="center"
        android:padding="32dp"
        android:text="@string/cropwise_ui_kit"
        android:textColor="@color/teal_500"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_heading">

        <Button
            android:id="@+id/button_buttons"
            android:layout_width="match_parent"
            android:fontFamily="@font/noto_sans_regular"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/buttons" />

        <Button
            android:id="@+id/button_fonts"
            android:layout_width="match_parent"
            android:fontFamily="@font/noto_sans_regular"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/fonts" />

        <Button
            android:id="@+id/button_dialogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_regular"
            android:layout_margin="16dp"
            android:text="@string/dialogs" />

        <Button
            android:id="@+id/button_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_regular"
            android:layout_margin="16dp"
            android:text="@string/colors" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>